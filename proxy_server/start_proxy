#!/usr/bin/env sh 

echo "Adding proxy port to shared database..."
node connect_db.js
echo "Database updated"


echo "Starting proxy server..."
configurable-http-proxy --ip=${PROXY_WEB_URL#https://%/} --port=$PORT --api-ip=${PROXY_WEB_URL#https://%/} --api-port=$PORT --default-target=${HUB_WEB_URL}:${HUB_PORT} --error-target=${HUB_WEB_URL}:${HUB_PORT}/hub/error --log-level=debug
echo "Proxy server running..."
